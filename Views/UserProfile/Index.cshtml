@model TvShop.Models.ApplicationUser

@{
    ViewData["Title"] = "My Profile";
}

<style>
    .profile-card {
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
    .profile-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }
    
    .profile-header {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        padding: 2rem;
        color: white;
        position: relative;
        overflow: hidden;
    }
    
    .profile-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
        opacity: 0.5;
    }
    
    .profile-avatar {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        border: 5px solid white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
    }
    
    .profile-avatar:hover {
        transform: scale(1.05);
    }
    
    .profile-name {
        font-size: 2rem;
        font-weight: 700;
        margin-top: 1rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.2);
    }
    
    .profile-username {
        font-size: 1.1rem;
        opacity: 0.9;
    }
    
    .profile-stats {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 1.5rem;
    }
    
    .stat-item {
        text-align: center;
    }
    
    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
    }
    
    .stat-label {
        font-size: 0.9rem;
        opacity: 0.8;
    }
    
    .profile-body {
        padding: 2rem;
    }
    
    .profile-section {
        margin-bottom: 2rem;
    }
    
    .section-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1rem;
        position: relative;
        display: inline-block;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 50%;
        height: 3px;
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        border-radius: 3px;
        transition: width 0.3s ease;
    }
    
    .section-title:hover::after {
        width: 100%;
    }
    
    .profile-info-item {
        display: flex;
        margin-bottom: 1rem;
        align-items: center;
    }
    
    .info-label {
        width: 120px;
        color: #666;
        font-weight: 500;
    }
    
    .info-value {
        flex: 1;
        font-weight: 500;
    }
    
    .bio-text {
        line-height: 1.6;
        color: #555;
    }
    
    .action-button {
        padding: 0.6rem 1.5rem;
        border-radius: 50px;
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }
    
    .action-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.15);
    }
    
    .action-button i {
        margin-right: 0.5rem;
    }
    
    .recent-activity-item {
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
        background-color: #f8f9fa;
        border-left: 4px solid #2575fc;
    }
    
    .recent-activity-item:hover {
        transform: translateX(5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }
    
    .activity-date {
        font-size: 0.8rem;
        color: #666;
    }
    
    .rating-stars {
        color: #ffc107;
    }
</style>

<div class="container my-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="profile-card">
                <div class="profile-header text-center">
                    <img src="@Model.ProfileImage" alt="Profile Image" class="profile-avatar" />
                    <h1 class="profile-name">@(string.IsNullOrEmpty(Model.FullName) ? "User" : Model.FullName)</h1>
                    <p class="profile-username">@Model.UserName</p>
                    <div class="profile-stats">
                        <div class="stat-item">
                            <div class="stat-value">@(ViewBag.UserRatings?.Count ?? 0)</div>
                            <div class="stat-label">Reviews</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">@(ViewBag.UserOrders?.Count ?? 0)</div>
                            <div class="stat-label">Orders</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">@Model.JoinDate.ToString("MMM yyyy")</div>
                            <div class="stat-label">Joined</div>
                        </div>
                    </div>
                </div>
                
                <div class="profile-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" class="btn btn-primary action-button">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>
                        <a asp-controller="Order" asp-action="MyOrders" class="btn btn-outline-primary action-button">
                            <i class="fas fa-box-open"></i> My Orders
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <div class="profile-card mb-4">
                <div class="profile-body">
                    <div class="profile-section">
                        <h3 class="section-title">About Me</h3>
                        <p class="bio-text">@(string.IsNullOrEmpty(Model.Bio) ? "No bio information provided yet." : Model.Bio)</p>
                    </div>
                    
                    <div class="profile-section">
                        <h3 class="section-title">Personal Information</h3>
                        <div class="profile-info-item">
                            <div class="info-label"><i class="fas fa-user me-2"></i> Name</div>
                            <div class="info-value">@(string.IsNullOrEmpty(Model.FullName) ? "Not provided" : Model.FullName)</div>
                        </div>
                        <div class="profile-info-item">
                            <div class="info-label"><i class="fas fa-envelope me-2"></i> Email</div>
                            <div class="info-value">@Model.Email</div>
                        </div>
                        <div class="profile-info-item">
                            <div class="info-label"><i class="fas fa-phone me-2"></i> Phone</div>
                            <div class="info-value">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Not provided" : Model.PhoneNumber)</div>
                        </div>
                        <div class="profile-info-item">
                            <div class="info-label"><i class="fas fa-map-marker-alt me-2"></i> Location</div>
                            <div class="info-value">@(string.IsNullOrEmpty(Model.Location) ? "Not provided" : Model.Location)</div>
                        </div>
                        <div class="profile-info-item">
                            <div class="info-label"><i class="fas fa-calendar-alt me-2"></i> Birth Date</div>
                            <div class="info-value">@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("MMMM d, yyyy") : "Not provided")</div>
                        </div>
                        <div class="profile-info-item">
                            <div class="info-label"><i class="fas fa-clock me-2"></i> Joined</div>
                            <div class="info-value">@Model.JoinDate.ToString("MMMM d, yyyy")</div>
                        </div>
                    </div>
                </div>
            </div>
            
            @if (ViewBag.UserRatings != null && ViewBag.UserRatings.Count > 0)
            {
                <div class="profile-card mb-4">
                    <div class="profile-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="section-title">Recent Reviews</h3>
                            <a href="#" class="text-decoration-none">View All</a>
                        </div>
                        
                        @foreach (var rating in ViewBag.UserRatings)
                        {
                            <div class="recent-activity-item">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <a href="/Products/Details/@rating.ProductId" class="text-decoration-none fw-bold">@rating.Product.Name</a>
                                        <div class="rating-stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= rating.Value)
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star"></i>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <span class="activity-date">@rating.CreatedAt.ToString("MMM d, yyyy")</span>
                                </div>
                                <p class="mb-0">@(string.IsNullOrEmpty(rating.Comment) ? "No comment provided." : rating.Comment)</p>
                            </div>
                        }
                    </div>
                </div>
            }
            
            @if (ViewBag.UserOrders != null && ViewBag.UserOrders.Count > 0)
            {
                <div class="profile-card">
                    <div class="profile-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="section-title">Recent Orders</h3>
                            <a asp-controller="Order" asp-action="MyOrders" class="text-decoration-none">View All</a>
                        </div>
                        
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in ViewBag.UserOrders)
                                    {
                                        <tr>
                                            <td>#@order.Id</td>
                                            <td>@order.OrderDate.ToString("MMM d, yyyy")</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-warning">Pending</span>
                                                        break;
                                                    case "Processing":
                                                        <span class="badge bg-primary">Processing</span>
                                                        break;
                                                    case "Shipped":
                                                        <span class="badge bg-info">Shipped</span>
                                                        break;
                                                    case "Delivered":
                                                        <span class="badge bg-success">Delivered</span>
                                                        break;
                                                    case "Cancelled":
                                                        <span class="badge bg-danger">Cancelled</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@order.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>₹@order.TotalAmount.ToString("N2")</td>
                                            <td>
                                                <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add animation to sections when they come into view
            function animateSections() {
                $('.profile-card').each(function(i) {
                    var $element = $(this);
                    var position = $element.offset().top;
                    var scroll = $(window).scrollTop();
                    var windowHeight = $(window).height();
                    
                    if (scroll + windowHeight > position) {
                        setTimeout(function() {
                            $element.addClass('animate__animated animate__fadeInUp');
                        }, i * 100);
                    }
                });
            }
            
            // Run on page load
            animateSections();
            
            // Run on scroll
            $(window).scroll(function() {
                animateSections();
            });
        });
    </script>
}
