@model TvShop.ViewModels.UserDetailsViewModel
@using TvShop.Models

<div class="container my-4">
    <!-- Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-user-circle me-2"></i>User Details</h2>
            <p class="text-muted">Manage details for @Model.User.FullName</p>
        </div>
        <div class="col-md-6 text-md-end">
            <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to User List
            </a>
        </div>
    </div>

    <!-- User Info -->
    <div class="row mb-4">
        <div class="col-lg-4 mb-4 mb-lg-0">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0"><i class="fas fa-id-card me-2"></i>User Profile</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="@Model.User.ProfileImage" alt="@Model.User.UserName" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">
                        <h4 class="mt-3 mb-1">@Model.User.FullName</h4>
                        <p class="text-muted mb-1">@Model.User.UserName</p>
                        <p class="text-muted">
                            <i class="fas fa-calendar-alt me-1"></i> Joined @Model.User.JoinDate.ToString("MMMM d, yyyy")
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="text" class="form-control" value="@Model.User.Email" readonly>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.User.PhoneNumber))
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted small">Phone Number</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                <input type="text" class="form-control" value="@Model.User.PhoneNumber" readonly>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.User.Location))
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted small">Location</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                <input type="text" class="form-control" value="@Model.User.Location" readonly>
                            </div>
                        </div>
                    }

                    @if (Model.User.DateOfBirth.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted small">Date of Birth</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-birthday-cake"></i></span>
                                <input type="text" class="form-control" value="@Model.User.DateOfBirth.Value.ToString("MMMM d, yyyy")" readonly>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.User.Bio))
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted small">Bio</label>
                            <div class="form-control" style="min-height: 80px; overflow-y: auto;">@Model.User.Bio</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0"><i class="fas fa-user-tag me-2"></i>User Roles</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("ToggleUserRole", "Admin")" class="mb-3">
                        <input type="hidden" name="userId" value="@Model.User.Id" />
                        <div class="row align-items-end g-3">
                            <div class="col-md-6">
                                <label class="form-label text-muted small">Current Roles</label>
                                <div>
                                    @foreach (var role in Model.Roles)
                                    {
                                        <span class="badge @(role == "Admin" ? "bg-danger" : "bg-primary") me-1 p-2">
                                            <i class="fas fa-check-circle me-1"></i> @role
                                        </span>
                                    }
                                    @if (!Model.Roles.Any())
                                    {
                                        <span class="text-muted">No roles assigned</span>
                                    }
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-muted small">Add/Remove Role</label>
                                <select name="roleName" class="form-select">
                                    <option value="">Select a role...</option>
                                    <option value="Admin">Admin</option>
                                    <option value="User">User</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary w-100">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0"><i class="fas fa-shopping-cart me-2"></i>Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center mb-4">
                        <div class="col">
                            <h5 class="fw-bold text-primary mb-0">@Model.TotalOrders</h5>
                            <p class="text-muted small">Total Orders</p>
                        </div>
                        <div class="col">
                            <h5 class="fw-bold text-success mb-0">â‚¹@Model.TotalSpent.ToString("N0")</h5>
                            <p class="text-muted small">Total Spent</p>
                        </div>
                        <div class="col">
                            <h5 class="fw-bold text-info mb-0">
                                @if (Model.TotalOrders > 0)
                                {
                                    @(Math.Round(Model.TotalSpent / Model.TotalOrders, 0).ToString("N0"))
                                }
                                else
                                {
                                    @("0")
                                }
                            </h5>
                            <p class="text-muted small">Avg. Order Value</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Recent Orders</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>Items</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Orders.Any())
                                {
                                    @foreach (var order in Model.Orders.Take(5))
                                    {
                                        <tr>
                                            <td>#@order.Id</td>
                                            <td>@order.OrderDate.ToString("MMM d, yyyy")</td>
                                            <td>@order.OrderItems.Count items</td>
                                            <td>
                                                <span class="badge @(order.Status == OrderStatus.Delivered ? "bg-success" : 
                                                    order.Status == OrderStatus.Processing ? "bg-info" : 
                                                    order.Status == OrderStatus.Shipped ? "bg-primary" : 
                                                    order.Status == OrderStatus.Cancelled ? "bg-danger" : "bg-secondary")">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td class="fw-bold">â‚¹@order.TotalAmount.ToString("N0")</td>
                                            <td class="text-end">
                                                <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <div class="d-flex flex-column align-items-center py-4">
                                                <i class="fas fa-shopping-basket fa-3x text-muted mb-3"></i>
                                                <h5>No orders yet</h5>
                                                <p class="text-muted">This user hasn't placed any orders</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (Model.Orders.Count > 5)
                {
                    <div class="card-footer text-center py-3">
                        <a href="@Url.Action("UsersOrders", "Order", new { userId = Model.User.Id })" class="text-decoration-none">
                            <i class="fas fa-list me-1"></i> View All Orders (@Model.Orders.Count)
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
