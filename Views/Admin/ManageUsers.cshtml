@model List<TvShop.ViewModels.UserViewModel>

<div class="container my-4">
    <!-- Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-users me-2"></i>Manage Users</h2>
            <p class="text-muted">View and manage user accounts</p>
        </div>
        <div class="col-md-6 text-md-end">
            <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Filters/Search -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" action="@Url.Action("ManageUsers", "Admin")">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control" placeholder="Search users..." value="@ViewBag.SearchString">
                            <button class="btn btn-outline-secondary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <select name="roleFilter" class="form-select" onchange="this.form.submit()">
                            <option value="">All Roles</option>
                            @foreach (var role in ViewBag.Roles)
                            {
                                <option value="@role.Name" selected="@(ViewBag.RoleFilter == role.Name)">@role.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-redo me-1"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Users List -->
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="card-title mb-0"><i class="fas fa-user me-2"></i>User Accounts</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Join Date</th>
                            <th>Orders</th>
                            <th>Spent</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var userVM in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@userVM.User.ProfileImage" alt="@userVM.User.UserName" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                            <div>
                                                <h6 class="mb-0">@userVM.User.FullName</h6>
                                                <small class="text-muted">@userVM.User.UserName</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@userVM.User.Email</td>
                                    <td>
                                        @foreach (var role in userVM.Roles)
                                        {
                                            <span class="badge @(role == "Admin" ? "bg-danger" : "bg-primary") me-1">@role</span>
                                        }
                                    </td>
                                    <td>@userVM.User.JoinDate.ToString("MMM d, yyyy")</td>
                                    <td>@userVM.OrderCount</td>
                                    <td class="text-success fw-bold">â‚¹@userVM.TotalSpent.ToString("N0")</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("UserDetails", "Admin", new { id = userVM.User.Id })" class="btn btn-outline-primary">
                                                <i class="fas fa-user-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <div class="d-flex flex-column align-items-center py-5">
                                        <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                                        <h5>No users found</h5>
                                        <p class="text-muted">Try adjusting your search or filter criteria</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
