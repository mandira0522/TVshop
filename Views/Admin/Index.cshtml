@model IEnumerable<TvShop.Models.Product>

<div class="container my-4">
    <!-- Admin Dashboard Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h2>
            <p class="text-muted">Manage your store's products, orders, and users</p>
        </div>
        <div class="col-md-6 text-md-end">
            <a href="@Url.Action("Create", "Admin")" class="btn btn-primary">
                <i class="fas fa-plus-circle me-1"></i> Add New TV
            </a>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary shadow mb-3">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Products</h6>
                            <h2 class="my-2">@Model.Count()</h2>
                        </div>
                        <i class="fas fa-tv fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success shadow mb-3">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Revenue Potential</h6>
                            <h2 class="my-2">₹@Model.Sum(p => p.Price).ToString("N0")</h2>
                        </div>
                        <i class="fas fa-rupee-sign fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info shadow mb-3">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Brands</h6>
                            <h2 class="my-2">@Model.Select(p => p.Brand).Distinct().Count()</h2>
                        </div>
                        <i class="fas fa-tag fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning shadow mb-3">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Avg Price</h6>
                            <h2 class="my-2">₹@(Model.Any() ? Math.Round(Model.Average(p => p.Price)) : 0)</h2>
                        </div>
                        <i class="fas fa-chart-line fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Navigation Cards -->
    <div class="row mb-4 d-md-flex d-none">
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-boxes fa-3x text-primary me-3"></i>
                    <div>
                        <h5 class="card-title">Manage Orders</h5>
                        <p class="card-text text-muted">View and manage customer orders</p>
                        <a href="@Url.Action("UsersOrders", "Order")" class="btn btn-sm btn-outline-primary">Go to Orders</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-users fa-3x text-success me-3"></i>
                    <div>
                        <h5 class="card-title">Manage Users</h5>
                        <p class="card-text text-muted">View and manage user accounts</p>
                        <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-sm btn-outline-success">Go to Users</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-cog fa-3x text-info me-3"></i>
                    <div>
                        <h5 class="card-title">Store Settings</h5>
                        <p class="card-text text-muted">Configure store settings</p>
                        <a href="@Url.Action("StoreSettings", "Admin")" class="btn btn-sm btn-outline-info">Go to Settings</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Management -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0"><i class="fas fa-tv me-2"></i>Product Management</h5>
                <div class="input-group" style="max-width: 300px;">
                    <input type="text" id="productSearch" class="form-control" placeholder="Search products...">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Main Image</th>
                            <th>Other Images</th>
                            <th>Name</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="productTableBody">
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@product.MainImageUrl" alt="@product.Name" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: contain;" />
                                </td>
                                <td>
                                    <div class="d-flex flex-wrap" style="gap: 5px; max-width: 200px;">
                                        @if (product.ProductImages != null && product.ProductImages.Any())
                                        {
                                            @foreach (var image in product.ProductImages.Take(3))
                                            {
                                                <img src="@image.ImageUrl" alt="@product.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: contain;" />
                                            }
                                            @if (product.ProductImages.Count() > 3)
                                            {
                                                <span class="badge bg-secondary">+@(product.ProductImages.Count() - 3) more</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted small">No additional images</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <h6 class="mb-0">@product.Name</h6>
                                    <small class="text-muted">ID: #@product.Id</small>
                                </td>
                                <td><span class="badge bg-light text-dark">@product.Brand</span></td>
                                <td class="text-success fw-bold">₹@product.Price.ToString("N2")</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Edit", "Admin", new { id = product.Id })" class="btn btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Admin", new { id = product.Id })" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <a href="@Url.Action("Details", "Products", new { id = product.Id })" target="_blank" class="btn btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>

<script>
    // Simple client-side filtering for product table
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('productSearch');
        const tableBody = document.getElementById('productTableBody');
        const rows = tableBody.querySelectorAll('tr');
        
        searchInput.addEventListener('keyup', function() {
            const searchTerm = searchInput.value.toLowerCase();
            
            rows.forEach(row => {
                const productName = row.querySelector('td:nth-child(3) h6').textContent.toLowerCase();
                const productBrand = row.querySelector('td:nth-child(4) span').textContent.toLowerCase();
                
                if (productName.includes(searchTerm) || productBrand.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });
</script>