@model List<TvShop.Models.CartItem>

<h2>Your Shopping Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td><img src="@item.MainImageUrl" width="50" height="50" /></td>
                    <td>₹@item.Price.ToString("N2")</td>
                    <td>
                        <form asp-action="UpdateQuantity" method="post">
                            <input type="hidden" name="id" value="@item.ProductId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" />
                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                        </form>
                    </td>
                    <td>₹@((item.Price * item.Quantity).ToString("N2"))</td>
                    <td>
                        <a asp-action="Remove" asp-route-id="@item.ProductId" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Checkout" asp-action="Index" class="btn btn-success">Proceed to Checkout</a>
}
