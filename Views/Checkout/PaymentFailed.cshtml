@model TvShop.Models.Order
@{
    ViewData["Title"] = "Payment Failed | TvShop";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-white text-danger p-3 me-3">
                            <i class="fas fa-exclamation-circle fa-2x"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">Payment Failed</h2>
                            <p class="mb-0">We couldn't process your payment</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="mb-4">
                            <i class="fas fa-times-circle text-danger fa-5x"></i>
                        </div>
                        <h3>Your payment of â‚¹@Model.TotalAmount.ToString("N2") was declined</h3>
                        <p class="lead text-muted">Order #@Model.Id could not be processed due to a payment issue.</p>
                    </div>

                    <div class="alert alert-secondary">
                        <h5><i class="fas fa-info-circle me-2"></i>Possible reasons for failure:</h5>
                        <ul class="mb-0">
                            <li>Insufficient funds in your account</li>
                            <li>Invalid card details</li>
                            <li>Transaction declined by your bank</li>
                            <li>Network or connectivity issues</li>
                        </ul>
                    </div>

                    <div class="card border-0 bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-question-circle me-2"></i>What should you do now?</h5>
                            <ol class="mb-0">
                                <li>Verify your payment details are correct</li>
                                <li>Check your account balance</li>
                                <li>Try a different payment method</li>
                                <li>Contact your bank if the problem persists</li>
                            </ol>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Return to Homepage
                        </a>
                        <a href="@Url.Action("FakePayment", "Checkout", new { id = Model.Id })" class="btn btn-primary">
                            <i class="fas fa-redo me-2"></i>Try Again
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        /* Error shake animation */
        .card-header {
            animation: shake 0.5s;
        }
        
        @@keyframes shake {
            0% { transform: translateX(0); }
            25% { transform: translateX(-10px); }
            50% { transform: translateX(10px); }
            75% { transform: translateX(-10px); }
            100% { transform: translateX(0); }
        }
    </style>
}
