@model TvShop.Models.Order

@{
    ViewData["Title"] = "Payment | TvShop";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-credit-card me-2"></i>Secure Payment</h4>
                        <div>
                            <i class="fab fa-cc-visa fa-2x me-2"></i>
                            <i class="fab fa-cc-mastercard fa-2x me-2"></i>
                            <i class="fab fa-cc-amex fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-12 text-center mb-4">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i> This is a simulation. No real payment will be processed.
                            </div>
                        </div>
                        
                        <div class="col-lg-7">
                            <div class="mb-4">
                                <h5 class="border-bottom pb-2">Payment Details</h5>
                                
                                <div class="mb-3">
                                    <label for="cardNumber" class="form-label">Card Number</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                                        <input type="text" class="form-control" id="cardNumber" value="4111 1111 1111 1111" disabled>
                                    </div>
                                    <small class="text-muted">Demo card number (Visa)</small>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="expiry" class="form-label">Expiration Date</label>
                                        <input type="text" class="form-control" id="expiry" value="12/25" disabled>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="cvv" class="form-label">CVV</label>
                                        <input type="text" class="form-control" id="cvv" value="123" disabled>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="nameOnCard" class="form-label">Name on Card</label>
                                    <input type="text" class="form-control" id="nameOnCard" value="Demo User" disabled>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-5">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title border-bottom pb-2">Order Summary</h5>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Order ID:</span>
                                        <span class="fw-bold">#@Model.Id</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Items:</span>
                                        <span>@Model.OrderItems?.Count ?? 0</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Shipping:</span>
                                        <span class="text-success">Free</span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="fw-bold">Total:</span>
                                        <span class="fs-5 fw-bold">₹@Model.TotalAmount.ToString("N2")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            <form asp-action="CompletePayment" method="post">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <div class="d-grid">
                                    <button type="submit" id="payButton" class="btn btn-success btn-lg py-3">
                                        <i class="fas fa-lock me-2"></i>Pay ₹@Model.TotalAmount.ToString("N2") Securely
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white py-3">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-shield-alt text-primary me-2 fa-2x"></i>
                                <div>
                                    <h6 class="mb-0">100% Secure Payment</h6>
                                    <small class="text-muted">Your data is protected</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 text-md-end mt-3 mt-md-0">
                            <a href="javascript:history.back()" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple animation for payment button
        $(document).ready(function() {
            $('#payButton').hover(
                function() { $(this).addClass('pulse'); },
                function() { $(this).removeClass('pulse'); }
            );
        });
    </script>
    
    <style>
        .pulse {
            animation: pulse-animation 1s infinite;
        }
        
        @@keyframes pulse-animation {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
    </style>
}