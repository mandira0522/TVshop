@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Confirmation";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />

<div class="auth-body">
    <div class="auth-container">
        <div class="auth-logo-container">
            <img src="~/uploads/logo/profile.png" alt="Profile" class="auth-logo mb-3 auth-logo-animated">
        </div>
        <h2 class="auth-title">Password Reset Complete</h2>
        <p class="auth-subtitle">Your password has been reset successfully</p>

        <div class="auth-form-animated">
            <div class="auth-alert auth-alert-success">
                <i class="fas fa-check-circle me-2"></i> Your password has been reset. You can now login with your new password.
            </div>

            <div class="auth-footer mt-4">
                <a href="/Identity/Account/Login" class="auth-btn auth-btn-animated">
                    <span class="auth-btn-content">
                        <i class="fas fa-sign-in-alt me-2"></i>Return to Login
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>
